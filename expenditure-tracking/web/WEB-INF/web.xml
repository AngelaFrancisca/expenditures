<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
	<distributable/>
	<locale-encoding-mapping-list>
		<locale-encoding-mapping>
			<locale>pt</locale>
			<encoding>UTF-8</encoding>
		</locale-encoding-mapping>
	</locale-encoding-mapping-list>

	<filter>
	    <filter-name>MultipartFilter</filter-name>
	    <filter-class>org.apache.myfaces.component.html.util.MultipartFilter</filter-class>
		<init-param>
			<param-name>uploadMaxFileSize</param-name>
			<param-value>10m</param-value>
		</init-param>
		<init-param>
			<param-name>uploadThresholdSize</param-name>
			<param-value>1m</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>CharsetEncoding</filter-name>
		<filter-class>pt.ist.expenditureTrackingSystem.presentationTier.servlets.filters.CharsetEncodingFilter</filter-class>
		<init-param>
			<param-name>defaultCharset</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter>
	    <filter-name>CloseTxFilter</filter-name>
	    <filter-class>pt.ist.fenixWebFramework.servlets.filters.CloseTransactionFilter</filter-class>
	</filter>
   	<filter>
	    <filter-name>CasAuthenticationFilter</filter-name>
	    <filter-class>pt.ist.expenditureTrackingSystem.presentationTier.servlets.filters.CasAuthenticationFilter</filter-class>
	</filter>
	<filter>
	    <filter-name>SetUserViewFilter</filter-name>
	    <filter-class>pt.ist.fenixWebFramework.servlets.filters.SetUserViewFilter</filter-class>
	</filter>
	<filter>
	    <filter-name>indexFilter</filter-name>
	    <filter-class>pt.ist.expenditureTrackingSystem.presentationTier.servlets.filters.ExpendituresRequestWrapperFilter</filter-class>
	</filter>
	<filter>
		 <filter-name>ProfilingFilter</filter-name>
		 <filter-class>pt.ist.fenixWebFramework.servlets.filters.ProfilingFilter</filter-class>
	</filter>
	<filter>
	    <filter-name>I18NFilter</filter-name>
	    <filter-class>pt.ist.fenixWebFramework.servlets.filters.I18NFilter</filter-class>
	</filter>
	<filter>
		<filter-name>ExceptionHandlerFilter</filter-name>
		<filter-class>pt.ist.expenditureTrackingSystem.presentationTier.servlets.filters.ExceptionHandlerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>PathAccessControlFilter</filter-name>
        <filter-class>pt.ist.fenixWebFramework.servlets.filters.PathAccessControlFilter</filter-class>
        <init-param>
            <param-name>use-request-path</param-name>
            <param-value>true</param-value> 
        </init-param>
    </filter>
    <filter>
	    <filter-name>RequestChecksumFilter</filter-name>
	    <filter-class>pt.ist.expenditureTrackingSystem.presentationTier.servlets.filters.contentRewrite.RequestChecksumFilter</filter-class>
	</filter>
   	<filter>
	    <filter-name>RequestRewriteFilter</filter-name>
	    <filter-class>pt.ist.fenixWebFramework.servlets.filters.contentRewrite.RequestRewriterFilter</filter-class>
	</filter>
    <filter>
	    <filter-name>LayoutFilter</filter-name>
	    <filter-class>pt.ist.expenditureTrackingSystem.presentationTier.servlets.filters.LayoutFilter</filter-class>
	</filter>

	<!-- Filter Mapping -->
	<filter-mapping>
        <filter-name>CharsetEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PathAccessControlFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	<filter-mapping>
		<filter-name>MultipartFilter</filter-name>
		<url-pattern>*.faces</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CloseTxFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
        <filter-name>CasAuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ExceptionHandlerFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ExceptionHandlerFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
	<filter-mapping>
		<filter-name>SetUserViewFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
        <filter-name>LayoutFilter</filter-name>
        <url-pattern>/CSS/user/*</url-pattern>
    </filter-mapping>
	<filter-mapping>
		<filter-name>I18NFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
	    <filter-name>indexFilter</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
 		 <filter-name>ProfilingFilter</filter-name>
 		 <url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
 		 <filter-name>ProfilingFilter</filter-name>
 		 <url-pattern>*.do</url-pattern>
	</filter-mapping>
    <filter-mapping>
	    <filter-name>RequestChecksumFilter</filter-name>
	    <url-pattern>*.do</url-pattern>
    </filter-mapping>
 	<filter-mapping>
	    <filter-name>RequestRewriteFilter</filter-name>
	    <url-pattern>*.do</url-pattern>
    </filter-mapping>
    
    <!-- Listeners -->
	<servlet>
        <servlet-name>StartupServlet</servlet-name>
        <servlet-class>pt.ist.expenditureTrackingSystem.presentationTier.servlets.StartupServlet</servlet-class>
        <init-param>
            <param-name>domainmodel</param-name>
            <param-value>/WEB-INF/classes/domain_model.dml</param-value>
        </init-param>        
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>pt.ist.expenditureTrackingSystem.presentationTier.servlets.ActionServletWrapper</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AutoCompleteServlet</servlet-name>
        <servlet-class>pt.ist.expenditureTrackingSystem.presentationTier.servlets.ajax.ExpendituresAutoCompleteServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    
    
    <!-- Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>AutoCompleteServlet</servlet-name>
		<url-pattern>/ajax/AutoCompleteServlet</url-pattern>
	</servlet-mapping>
    
    

	<session-config>
			<session-timeout>120</session-timeout>
	</session-config>

    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/messages.tld</taglib-uri>
            <taglib-location>/WEB-INF/messages.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/struts-html.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-html.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/struts-logic.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-logic.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/struts-bean.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-bean.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/app.tld</taglib-uri>
            <taglib-location>/WEB-INF/app.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/c.tld</taglib-uri>
            <taglib-location>/WEB-INF/c.tld</taglib-location>
        </taglib>
       	<taglib>
       		<taglib-uri>/WEB-INF/taglibs-datetime.tld</taglib-uri>
       		<taglib-location>/WEB-INF/taglibs-datetime.tld</taglib-location>
       	</taglib>
       	<taglib>
       		<taglib-uri>/WEB-INF/taglibs-string.tld</taglib-uri>
       		<taglib-location>/WEB-INF/taglibs-string.tld</taglib-location>
       	</taglib>

		<jsp-property-group>
	      <description>All JSPs</description>
	      <url-pattern>*.jsp</url-pattern>
	      <el-ignored>true</el-ignored>
	      <page-encoding>UTF-8</page-encoding>
	    </jsp-property-group>
    </jsp-config>

</web-app>
