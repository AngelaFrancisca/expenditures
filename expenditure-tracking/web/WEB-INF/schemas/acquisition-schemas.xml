<schema name="createAcquisitionRequest"
		type="pt.ist.expenditureTrackingSystem.domain.dto.CreateAcquisitionProcessBean"
		bundle="ACQUISITION_RESOURCES">
	<slot name="supplier" layout="autoComplete" >
        <property name="labelField" value="name"/>
		<property name="format" value="${fiscalIdentificationCode} - ${name}"/>
		<property name="minChars" value="1"/>		
		<property name="args" value="provider=pt.ist.expenditureTrackingSystem.presentationTier.renderers.autoCompleteProvider.NIFSupplierAutoCompleteProvider"/>
	</slot>
	<slot name="project" key="label.project" bundle="ACQUISITION_RESOURCES"/>
	<slot name="subproject" key="label.subproject" bundle="ACQUISITION_RESOURCES"/>
	<slot name="recipient" key="label.recipient" bundle="ACQUISITION_RESOURCES"/>
	<slot name="receptionAddress" key="label.receptionAddress" bundle="ACQUISITION_RESOURCES"/>
	<slot name="requestingUnit" key="label.requestingUnit" bundle="ACQUISITION_RESOURCES" layout="menu-select">
		<property name="providerClass" value="pt.ist.expenditureTrackingSystem.presentationTier.renderers.providers.DumbUnitProvider"/>
		<property name="format" value="${name}"/>
	</slot>
	<slot name="requestUnitPayingUnit" key="label.requestUnitPayingUnit" bundle="ACQUISITION_RESOURCES"/>	
</schema>

<schema name="editAcquisitionRequest"
		type="pt.ist.expenditureTrackingSystem.domain.dto.CreateAcquisitionProcessBean"
		bundle="ACQUISITION_RESOURCES" extends="createAcquisitionRequest">
	<remove name="recipient"/>
	<remove name="receptionAddress"/>
</schema>

